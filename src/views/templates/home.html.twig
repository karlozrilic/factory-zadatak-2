                    <button class="button">Book now</button>
                </div>
            </div>
        </div>
        <div class="reviews">
            <h1 class="reviews-title">Guest reviews</h1>
            <div class="arrows">
                <img class='a-left control-c prev slick-prev' id="guest-reviews-prev" src='{{base_path~directory}}/assets/images/icons/arrow.svg' alt="Previous arrow">
                <img class='a-right control-c next slick-next' id="guest-reviews-next" src='{{base_path~directory}}/assets/images/icons/arrow.svg' alt="Next arrow">
            </div>
            {% for rev in reviews %}
            <div class="review">
                <div class="user">
                    <div class="user-data">
                        <img class="profile-image" src="{{rev.user.profile_image}}" />
                        <p class="profile-data">{{rev.user.name}}</p>
                    </div>
                    <div class="rating">
                        {% for i in range(1, 5) %}
                            {% if i <= rev.rating %}
                                <img src="{{base_path~directory}}/assets/images/icons/ratingStarFull.svg" />
                            {% else %}
                                <img src="{{base_path~directory}}/assets/images/icons/ratingStarEmpty.svg" />
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="review-comment">
                    <p>{{rev.comment}}</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
{% block footer %}
    {% include "footer.html.twig" %}
{% endblock %}
{% block footerScripts %}
<script>
    $('.slider').slick({
        infinite: true,
        slidesToShow: 1,
        slidesToScroll: 1,
        variableWidth: true,
        speed: 500,
        prevArrow: "<div class='a-left control-c prev slick-prev'><i class='fas fa-chevron-left fa-2x'></i></div>",
        nextArrow: "<div class='a-right control-c next slick-next'><i class='fas fa-chevron-right fa-2x'></i></div>"
    });
    $('.news-slider').slick({
        infinite: true,
        autoplay: true,
        slidesToShow: 2,
        slidesToScroll: 1,
        slide: ".card",
        speed: 500,
        prevArrow: $("#news-carousel-prev"),
        nextArrow: $("#news-carousel-next")
    });
    $('.reviews').slick({
        infinite: true,
        autoplay: true,
        slidesToShow: 2,
        slidesToScroll: 1,
        slide: ".review",
        dots: true,
        speed: 500,
        prevArrow: $("#guest-reviews-prev"),
        nextArrow: $("#guest-reviews-next")
    });
</script>
{% endblock %}