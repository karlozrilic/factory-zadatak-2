            <div class="news">
                <h1 class="news-title">Recent news</h1>
                <div class="news-slider">
                    <div class="arrows">
                        <img class='a-left control-c prev slick-prev' id="news-carousel-prev" src='{{base_path~directory}}/assets/images/icons/arrow.svg' alt="Previous arrow">
                        <img class='a-right control-c next slick-next' id="news-carousel-next" src='{{base_path~directory}}/assets/images/icons/arrow.svg' alt="Next arrow">
                    </div>
                {% for n in news %}
                    <div class="card card-news">
                        <div class="card-image">
                            <img class="card-img-top" src="{{n.image}}" alt="Card image cap">
                        </div>
                        <div class="card-body">
                            <p class="card-category">{{n.category}}</p>
                            <h5 class="card-body-title">{{n.title}}</h5>
                            <p class="card-description">{{n.description}}</p>
                            <a href="#" class="card-link">View details<div class="arrow"><i class="fas fa-chevron-right"></i></div></a>
